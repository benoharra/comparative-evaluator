{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES2017"
    ],
    "strict": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "createElement",
    "declaration": false,
    "sourceMap": true
  },
  "include": [
      "src/**/*"
  ],
  "allowSyntheticDefaultImports": true
}
